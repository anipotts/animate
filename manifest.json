{
  "manifest_version": 3,
  "name": "AniMate",
  "version": "1.0.0",
  "description": "Personal executive function co-pilot: browsing intelligence, clipboard vault, tab commander, and life dashboard",

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png"
    },
    "default_title": "AniMate"
  },

  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/clipboard-monitor.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "webRequest",
    "identity",
    "notifications",
    "downloads",
    "clipboardRead"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "oauth2": {
    "client_id": "946033739086-tpvj6ts9o903qkf7c2ht7cpbjhjf9fgg.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },

  "options_page": "options/options.html",

  "web_accessible_resources": [
    {
      "resources": ["ui/dashboard/dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
